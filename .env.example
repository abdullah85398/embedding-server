# General Settings
APP_NAME="Embedding Server"

# Authentication Settings
# Options: NONE, KEY, JWT
AUTH_MODE=KEY
API_KEY=changeme

# JWT Settings (Required if AUTH_MODE=JWT)
JWT_SECRET=please_change_this_secret_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
# Comma-separated list or JSON array
REGISTERED_CLIENT_IDS='["default_client", "my-app"]'

# Cache Settings
# REDIS_URL=redis://localhost:6379/0
ENABLE_CACHE=true
CACHE_TTL=3600

# Performance Settings
MAX_INFLIGHT_REQUESTS=100
